<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ToolbarPopupMenu">
    	<item name="android:colorBackground">@color/white</item>
    	<item name="android:textColor">@color/black</item>
    </style>
    
    <style name="AppTheme.Splash" parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
    </style>

    <style name="AppTheme.Window.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Widget.ListView.None" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="Widget.ListView.Theme" parent="Widget.ListView.None">
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@color/darker_white</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Widget.App.EditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Widget.App.EditText.Big" parent="Widget.App.EditText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearence.App.EditText.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        android:textColorHint="@color/gray"
    </style>

    <style name="TextAppearence.Widget.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/light_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearence.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearence.Text.Small" parent="TextAppearence.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearence.Text.Smaller" parent="TextAppearence.Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearence.Text.Big" parent="TextAppearence.Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RadioButton.Tab" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/translucent</item>
    </style>

</resources>